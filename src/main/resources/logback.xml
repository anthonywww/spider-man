<?xml version="1.0" encoding="UTF-8"?>
<configuration>

	<appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<charset>utf8</charset>
			<pattern>%d{HH:mm:ss} [%t/%level] %msg%n</pattern>
		</encoder>
	</appender>
	
	<root level="info">
		<appender-ref ref="CONSOLE" />
	</root>
	
</configuration>